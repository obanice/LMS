@using Core
@using Core.ViewModels;
@model Core.ViewModels.IPageListModel<CourseViewModel>
@{
	ViewData["Title"] = "Lecturer Courses";
	Layout = ViewBag.Layout;
	ViewData["CustomActionName"] = Model.SearchAction;
	var lecturer = ViewBag.LecturerName;
}
<style>

	body {
		counter-reset: Serial;
	}

	tr td:first-child:before {
		counter-increment: Serial;
		content: counter(Serial);
	}
</style>

<div class="page-wrapper">

	<div class="content container-fluid">

		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">@lecturer Courses</h3>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="#">Dashboard</a></li>
						<li class="breadcrumb-item active">Course</li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
		<!-- Search Filter -->
		@Html.Partial("_PageSearcher", Model)
		<!-- Search Filter -->
		<section class="card-box">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>S/N</th>
							<th>Code</th>
							<th>Name</th>
							<th>Description</th>
							<th>Level</th>
							<th>Semester</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Model != null)
						{
							@foreach (var course in Model.Model)
							{
								<tr>
									<td></td>
									<td>@course.Code</td>
									<td>@course.Name</td>
									<td>@course.Description</td>
									<td>@course.Level</td>
									<td>@course.Semester</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</section>
	</div>
	<!-- /Page Content -->
	@Html.Partial("_Pager", Model.Model)
</div>

