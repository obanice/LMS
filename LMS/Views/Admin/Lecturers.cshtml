@using Core
@using Core.ViewModels;
@model Core.ViewModels.IPageListModel<LecturerViewModel>
@{
    ViewData["Title"] = "Lecturers";
    Layout = ViewBag.Layout;
    ViewData["CustomActionName"] = Model.SearchAction;
}
<style>

	body {
		counter-reset: Serial;
	}

	tr td:first-child:before {
		counter-increment: Serial;
		content: counter(Serial);
	}
</style>

<div class="page-wrapper">

	<div class="content container-fluid">

		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Lecturers</h3>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="#">Dashboard</a></li>
						<li class="breadcrumb-item active">Lecturer</li>
					</ul>
				</div>
				<div class="col-auto float-right ml-auto" id="supplierAdd">
					<a href="#" class="btn add-btn" data-toggle="modal" data-target="#add_lecturer"><i class="fa fa-plus"></i> Add Lecturer</a>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
		<!-- Search Filter -->
		@Html.Partial("_PageSearcher", Model)
		<!-- Search Filter -->
		<section class="card-box">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>S/N</th>
							<th>Full Name</th>
							<th>PhoneNumber</th>
							<th>Email</th>
							<th>Gender</th>
							<th>Courses</th>
							<th class="text-right no-sort">Action</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Model != null)
						{
							@foreach (var lecturer in Model.Model)
							{
								<tr>
									<td></td>
									<td>@lecturer.FullName</td>
									<td>@lecturer.PhoneNumber</td>
									<td>@lecturer.Email</td>
									<td>@lecturer.Gender</td>
									<td>
										<a asp-route-id="@lecturer.Department" asp-controller="Admin" asp-action="LecturerCourse" class="btn add-btn text-white"><i class="fa fa-users"></i>Courses</a>
									</td>
									<td class="text-right">
										<div class="dropdown dropdown-action">
											<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
											<div class="dropdown-menu dropdown-menu-right">
												<a class="dropdown-item" data-toggle="modal" data-target="#edit_supplier" onclick="getSupplierById('@lecturer.Id')"><i class="fa fa-pencil m-r-5"></i> Edit</a>
												<a class="dropdown-item" data-toggle="modal" data-target="#delete_supplier" onclick="getSupplierById('@lecturer.Id')"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
											</div>
										</div>
									</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</section>
	</div>
	<!-- /Page Content -->
	@Html.Partial("_Pager", Model.Model)
</div>

<div id="add_lecturer" class="modal custom-modal fade" role="dialog">
	<div class="modal-dialog modal-dialog-centered modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add Lecturer</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-sm-6">
						<div class="form-group">
							<label class="col-form-label">First Name <span class="text-danger">*</span></label>
							<input class="form-control" id="firstName" type="text">
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label class="col-form-label">Middle Name</label>
							<input class="form-control" id="middleName" type="text">
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label class="col-form-label">Last Name</label>
							<input class="form-control" id="lastName" type="text">
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label class="col-form-label">Email <span class="text-danger">*</span></label>
							<input class="form-control" id="email" type="email">
						</div>
					</div>

					<div class="col-sm-6">
						<div class="form-group">
							<label class="col-form-label">Phone </label>
							<input class="form-control" id="phone" type="text">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Gender <span class="text-danger">*</span></label>
							<select id="genderId" style="width:100%" asp-items="@(new SelectList(ViewBag.Gender ,"Id", "Name" ))" class="form-control makeFilter"> </select>
						</div>
					</div>
				</div>
				<div class="submit-section">
					<button class="btn btn-primary submit-btn" onclick="addLecturer()">Add</button>
				</div>
			</div>
		</div>
	</div>
</div>