
@{
    ViewData["Title"] = "Materials";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Page Wrapper -->
<div class="page-wrapper">

	<!-- Page Content -->
	<div class="content container-fluid">

		<div class="file-wrap">
			<div class="file-cont-wrap" style="margin-left:0px!important;">
				<div class="file-cont-inner">
					<div class="file-cont-header">
						<span>File Manager</span>
						<div class="file-options">
							<span class="btn-file"><input type="file" class="upload"><i class="fa fa-upload"></i></span>
						</div>
					</div>
					<div class="file-content">
						<div class="file-search">
							<div class="input-group">
								<div class="input-group-prepend">
									<i class="fa fa-search"></i>
								</div>
								<input type="text" class="form-control" placeholder="Search">
							</div>
						</div>
						<div class="file-body">
							<div class="file-scroll">
								<div class="file-content-inner">
									<h4>Files</h4>
									<div class="row">
										@if (Model != null && Model.Count() > 0)
										{
											@foreach (var studyMaterial in Model)
											{
												<div class="col-6 col-sm-4 col-md-3 col-lg-4 col-xl-3">
													<div class="card card-file">
														<div class="dropdown-file">
															<a href="" class="dropdown-link" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></a>
															<div class="dropdown-menu dropdown-menu-right">
																<a href="#" class="dropdown-item">Download</a>
																<a href="#" class="dropdown-item">Rename</a>
																<a href="#" class="dropdown-item">Delete</a>
															</div>
														</div>
														<div class="card-file-thumb">
															<i class=$"fa fa-file-{@studyMaterial.FileExtension}File-o"></i>
														</div>
														<div class="card-body">
															<h6><a href="">@studyMaterial.File</a></h6>
															<span>12mb</span>
														</div>
														<div class="card-footer">@studyMaterial.Date</div>
													</div>
												</div>
											}

										}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /Page Content -->

</div>
<!-- /Page Wrapper -->
