@{
	var randomStr = DateTime.Now.ToString().ToLower().Replace(":", "").Replace("pm", "").Replace("am", "");
	var user = Utility.GetCurrentUser();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
	<meta charset="utf-8">
	<meta content="en" />
	<title>@ViewData["Title"] | LMS Software</title>
	<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="/HomePage/extra-images/Badge logo.png">
	<link href="~/css/jquery-ui.css" rel="stylesheet" />
	<!-- Bootstrap CSS -->
	<link href="~/light/assets/css/bootstrap.min.css" rel="stylesheet" />
	<!-- Fontawesome CSS -->
	<link href="~/light/assets/css/font-awesome.min.css" rel="stylesheet" />
	<!-- Lineawesome CSS -->
	<link href="~/light/assets/css/line-awesome.min.css" rel="stylesheet" />
	<link href="~/css/font-awesome.min.css" rel="stylesheet" />
	<!-- Datatable CSS -->
	<link href="~/light/assets/css/datatables.bootstrap4.min.css" rel="stylesheet" />
	<link href="https://cdn.datatables.net/plug-ins/1.13.4/sorting/datetime-moment.js" />
	<link href="~/multi_select/sumoselect.min.css" rel="stylesheet" />
	<link href="~/light/assets/css/bootstrap-select.css" rel="stylesheet" />
	<!-- Select2 CSS -->
	<link href="~/light/assets/css/select2.min.css" rel="stylesheet" />
	<link href="~/css/sweetalert2.css" rel="stylesheet" />
	<link href="~/css/buttons.datatables.min.css" rel="stylesheet" />
	<!-- Datetimepicker CSS -->
	<link href="~/light/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
	<!-- Main CSS -->
	<link href="~/light/assets/css/style.css" rel="stylesheet" />
	<link href="~/css/pagination.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
	<script>
		function errorAlert(message) {
			Swal.fire({
				icon: 'error',
				text: message,
				timer: 60000,
				confirmButtonColor: "#366092",
			})
		}

		function infoAlert(message) {
			Swal.fire({
				icon: 'info',
				text: message,
				timer: 30000,
				confirmButtonColor: "#366092",
			})
		}

		function infoAlertWithStyles(message) {
			Swal.fire({
				title: 'Incomplete Payment',
				icon: 'info',
				text: message,
				confirmButtonColor: "#366092",
			})
		}
		function newInfoAlert(message, url) {
			Swal.fire({
				icon: 'info',
				text: message,
				timer: 30000,
				confirmButtonColor: "#366092",
			}).then((isConfirm) => {
				if (isConfirm) {
					location.href = url;
				}
			})
		}
		function successAlert(message) {
			Swal.fire({
				icon: 'success',
				text: message,
				timer: 30000,
				confirmButtonColor: "#366092",
			})
		}

		function newErrorAlert(message, url) {
			Swal.fire({
				icon: 'error',
				text: message,
				timer: 30000,
				confirmButtonColor: "#366092",
			}).then(function () {
				location.href = url;
			})
		}

		function newSuccessAlert(message, url) {
			Swal.fire({
				icon: 'success',
				text: message,
				confirmButtonColor: "#366092",
			}).then((isConfirm) => {
				if (isConfirm) {
					location.reload(url);
				}
			})

		}
		function successAlertWithRedirect(message, url) {
			Swal.fire({
				title: "Success",
				text: message,
				icon: "success",
				timer: 30000,
				overlay: "background - color: rgba(43, 165, 137, 0.45)",
				confirmButtonColor: "#366092",
			}).then(function () {

				location.href = url;
			})
		}

		function successAlertWithFunction(message, action) {
			Swal.fire({
				title: "Success",
				text: message,
				icon: "success",
				timer: 30000,
				overlay: "background - color: rgba(43, 165, 137, 0.45)",
				confirmButtonColor: "#366092",
			}).then(function () {
				action;
			})
		}
	</script>
</head>
<body>
	<!-- Main Wrapper -->
	<div class="main-wrapper">

		<!-- Header -->
		<div class="header">

			<!-- Logo -->
			<div class="header-left">
				<a href="/Home" class="logo">
					<!--<h3 class="mt-3">LMS</h3>-->
				  <img src="~/HomePage/extra-images/Faculty.Badge1.jpg" width="40" height="40" alt=""> 
				</a>
			</div>
			<!-- /Logo -->

			<a id="toggle_btn" href="javascript:void(0);">
				<span class="bar-icon">
					<span></span>
					<span></span>
					<span></span>
				</span>
			</a>

			<!-- Header Title -->
			<div class="page-title-box">
				<h3>FACULTY OF NATURAL SCIENCE LEARNING MANAGEMENT SYSTEM</h3>
			</div>
			<!-- /Header Title -->

			<a id="mobile_btn" class="mobile_btn" href="#sidebar"><i class="fa fa-bars"></i></a>

			<!-- Header Menu -->
			<ul class="nav user-menu">
				<li class="nav-item dropdown has-arrow main-drop">
					<a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
						<span class="user-img">
							<img src="assets/img/profiles/avatar-21.jpg" alt="">
							<span class="status online"></span>
						</span>
						<span>@user.FullName</span>
					</a>
					<div class="dropdown-menu">
						<a class="dropdown-item" href="#">My Profile</a>
						<form asp-action="Logout" asp-area="Security" asp-controller="Account" method="post">
							<button class="dropdown-item">Logout</button>
						</form>
					</div>
				</li>
			</ul>
			<!-- /Header Menu -->
			<!-- Mobile Menu -->
			<div class="dropdown mobile-user-menu">
				<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
				<div class="dropdown-menu dropdown-menu-right">
					<a class="dropdown-item" href="#">My Profile</a>
					<form asp-action="Logout" asp-area="Security" asp-controller="Account" method="post">
						<button class="dropdown-item">Logout</button>
					</form>
				</div>
			</div>
			<!-- /Mobile Menu -->
		</div>
		<!-- /Header -->
		
		<!-- Sidebar -->
		<div class="sidebar" id="sidebar">
			<div class="sidebar-inner slimscroll">
				<div id="sidebar-menu" class="sidebar-menu">
					<ul>
						@if (user.UserRole == Utility.Constants.AdminRole)
						{
							<li class="menu-title">
								<span>Main</span>
							</li>
							<li class="submenu">
								<a asp-controller="Admin" asp-action="Index"><i class="la la-dashboard"></i> <span> Dashboard</span></a>
							</li>
							<li class="menu-title">
								<span>Lecturer</span>
							</li>
							<li>
								<a asp-controller="Admin" asp-action="Lecturers"><i class="la la-users"></i> <span>Lecturers</span></a>
							</li>
							<li>
								<a asp-controller="Admin" asp-action="Courses"><i class="fa fa-book"></i> <span>Courses</span></a>
							</li>
							<li class="menu-title">
								<span>Student</span>
							</li>
							<li class="submenu">
								<a asp-controller="Admin" asp-action="Students"><i class="la la-cube"></i> <span>Students</span></a>
							</li>
						}
						@if (user.UserRole == Utility.Constants.LecturerRole)
						{
							<li class="submenu">
								<a asp-area="Lecturer" asp-controller="Home" asp-action="Index"><i class="la la-dashboard"></i> <span> Dashboard</span></a>
							</li>
							<li class="submenu">
								<a asp-area="Lecturer" asp-controller="Home" asp-action="Courses"><i class="fa fa-book"></i> <span> Courses</span></a>
							</li>
							<li class="submenu">
								<a asp-area="Lecturer" asp-controller="Home" asp-action="Quiz"><i class="fa fa-pencil"></i> <span> Quiz</span></a>
							</li>
						}
						@if (user.UserRole == Utility.Constants.StudentRole)
						{
							<li class="submenu">
								<a asp-area="Student" asp-controller="Home" asp-action="Index"><i class="la la-dashboard"></i> <span> Dashboard</span></a>
							</li>
							<li>
								<a asp-area="Student" asp-controller="Home" asp-action="Courses"><i class="fa fa-book"></i> <span>Courses</span></a>
							</li>
							<li>
								<a asp-area="Student" asp-controller="Home" asp-action="Materials"><i class="la la-ticket"></i> <span>Materials</span></a>
							</li>
							<li class="submenu">
								<a asp-area="Student" asp-controller="Home" asp-action="Quiz"><i class="fa fa-pencil"></i> <span> Quiz</span></a>
							</li>
							<li class="submenu">
								<a asp-area="Student" asp-controller="Home" asp-action="Scores"><i class="la la-external-link-square"></i> <span> Scores</span></a>
							</li>
						}
					</ul>
				</div>
			</div>
		</div>
		<!-- /Sidebar -->
		<div class="main-wrapper">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	</div>
	<!-- jQuery -->
	<script src="~/light/assets/js/jquery-3.5.1.min.js"></script>
	<!-- /Main Wrapper -->
	<script src="~/light/assets/js/popper.min.js"></script>
	<script src="~/light/assets/js/bootstrap.min.js"></script>
	<!-- Slimscroll JS -->
    <script src="~/light/assets/js/jquery.slimscroll.min.js"></script>

	<script src="~/js/sweetalert2.all.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/select2.min.js"></script>
	<!-- Datetimepicker JS -->
	<script src="~/light/assets/js/moment.min.js"></script>
	<script src="~/light/assets/js/bootstrap-datetimepicker.min.js"></script>
	<!-- Datatable JS -->
	<script src="~/light/assets/js/jquery.datatables.min.js"></script>
	<script src="~/light/assets/js/datatables.bootstrap4.min.js"></script>
	<script src="~/js/base/admin.js?v=@randomStr"></script>
</body>
</html>