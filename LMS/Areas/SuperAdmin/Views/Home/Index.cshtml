@model IEnumerable<Core.ViewModels.DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<!-- Page Wrapper -->
<div class="page-wrapper">

	<!-- Page Content -->
	<div class="content container-fluid">

		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Welcome Admin</h3>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="#">Dashboard</a></li>
						<li class="breadcrumb-item active">Departments</li>
					</ul>
				</div>
				<div class="col-auto float-right ml-auto">
					<a href="#" class="btn add-btn" data-toggle="modal" data-target="#add_admin"><i class="fa fa-plus"></i> Add New</a>
				</div>
			</div>
		</div>
		<!-- /Page Header -->

		<div class="row staff-grid-row">
			@if (Model != null && Model.Count() > 0)
			{
				@foreach (var department in Model)
				{
					<div class="col-md-4 col-sm-6 col-12 col-lg-4 col-xl-3">
						<div class="profile-widget">
							<div class="profile-img">
								<a href="#" class="avatar"><img src="assets/img/profiles/avatar-09.jpg" alt=""></a>
							</div>
							<div class="dropdown profile-action">
								<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
								<div class="dropdown-menu dropdown-menu-right">
									<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_department" onclick="departmentIdToDelete(@department.Id)"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
								</div>
							</div>
							<h4 class="user-name m-t-10 mb-0 text-ellipsis"><a href="#">@department.Name</a></h4>
							<div class="small text-muted">Admin: @department.AdminName</div>
							<div class="small text-muted">Phone Number: @department.AdminPhoneNumber</div>
						</div>
					</div>
				}
			}
		</div>
	</div>
	<!-- /Page Content -->
	<!-- Add Employee Modal -->
	<div id="add_admin" class="modal custom-modal fade" role="dialog">
		<div class="modal-dialog modal-dialog-centered modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Add Department</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-sm-6">
							<div class="form-group">
								<label class="col-form-label">Department Name <span class="text-danger">*</span></label>
								<input class="form-control" id="departmentName" type="text">
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<label class="col-form-label">Admin First Name <span class="text-danger">*</span></label>
								<input class="form-control" id="firstName" type="text">
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<label class="col-form-label">Admin Last Name</label>
								<input class="form-control" id="lastName" type="text">
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<label class="col-form-label">Email <span class="text-danger">*</span></label>
								<input class="form-control" id="email" type="email">
							</div>
						</div>
						
						<div class="col-sm-6">
							<div class="form-group">
								<label class="col-form-label">Phone </label>
								<input class="form-control" id="phone" type="text">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label>Gender <span class="text-danger">*</span></label>
								<select id="genderId" style="width:100%" asp-items="@(new SelectList(ViewBag.Gender ,"Id", "Name" ))" class="form-control makeFilter"> </select>
							</div>
						</div>
					</div>
					<div class="submit-section">
						<button class="btn btn-primary submit-btn" onclick="addDepartment()">Add</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /Add Employee Modal -->
	<div class="modal custom-modal fade" id="delete_department" role="dialog">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-body">
					<div class="form-header">
						<h3>Delete Department</h3>
						<input class="form-control" type="text" id="deleteId" hidden>
						<p>Are you sure want to delete?</p>
					</div>
					<div class="modal-btn delete-action">
						<div class="row">
							<div class="col-6">
								<a href="javascript:void(0);" class="btn btn-primary continue-btn" onclick="deleteDepartmentById()">Delete</a>
							</div>
							<div class="col-6">
								<a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

