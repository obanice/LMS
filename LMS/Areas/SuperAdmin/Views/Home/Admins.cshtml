@model IEnumerable<Core.ViewModels.ApplicationUserViewModel>
@{
	ViewData["Title"] = "Admins";
	Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
<div class="page-wrapper">
	<div class="content container-fluid">

		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">List of Admins</h3>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
		<div class="row staff-grid-row">
			@if (Model != null && Model.Count() > 0)
			{
				@foreach (var user in Model)
				{
					<div class="col-md-4 col-sm-6 col-12 col-lg-4 col-xl-3">
						<div class="profile-widget">
							<div class="profile-img">
								<a href="#" class="avatar"><img src="assets/img/profiles/avatar-09.jpg" alt=""></a>
							</div>
							<div class="dropdown profile-action">
								<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
								<div class="dropdown-menu dropdown-menu-right">
									<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_Admin" onclick="adminIdToDelete('@user.Id')"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
								</div>
							</div>
							<h4 class="user-name m-t-10 mb-0 text-ellipsis"><a href="#">@user.FullName</a></h4>
							<div class="small text-muted">Email: @user.Email</div>
							<div class="small text-muted">Phone Number: @user.PhoneNumber</div>
						</div>
					</div>
				}
			}
		</div>
	</div>
</div>
<div class="modal custom-modal fade" id="delete_Admin" role="dialog">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body">
				<div class="form-header">
					<h3>Delete Admin</h3>
					<input class="form-control" type="text" id="delete_adminId" hidden>
					<p>Are you sure want to delete?</p>
				</div>
				<div class="modal-btn delete-action">
					<div class="row">
						<div class="col-6">
							<a href="javascript:void(0);" class="btn btn-primary continue-btn" onclick="deleteAdminById()">Delete</a>
						</div>
						<div class="col-6">
							<a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
